<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/stateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your message goes here"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/successErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/retryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/send_sms_dialog_retry_message"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/sendProgressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your message goes here"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/receiveProgressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your message goes here"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/retryTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your message goes here"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Cancel"
                android:enabled="true"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnPositive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Continue"
                android:enabled="true"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/retry_fail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="retry"
                android:enabled="true"
                android:layout_gravity="center"/>

        </LinearLayout>



    </LinearLayout>



</FrameLayout>