<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/stateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Your message goes here"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/retryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:text="@string/send_sms_dialog_retry_message"
            android:textColor="#000000"
            android:visibility="gone" />


        <TextView
            android:id="@+id/sendProgressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Your message goes here"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/receiveProgressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Your message goes here"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/retryTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Your message goes here"
            android:textSize="15sp"
            android:textColor="#000000"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnPositive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="Continue" />

            <Button
                android:id="@+id/retry_fail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="retry" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>