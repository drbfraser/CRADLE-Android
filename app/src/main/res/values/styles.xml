<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- Text styles -->
    <!-- Style format and style name convention adapted from
         https://github.com/google/iosched/blob/master/mobile/src/main/res/values/styles.xml#L43 -->
    <style name="TextAppearance.Cradle.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Cradle.H2" parent="TextAppearance.Cradle.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <!-- <item name="android:textAllCaps">true</item> -->
    </style>

    <style name="TextAppearance.Cradle.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Source: https://medium.com/alexander-schaefer/implementing-the-new-material-design-full-screen-dialog-for-android-e9dcc712cb38 -->
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Theme for reading flow. -->
    <style name="ReadingFlowTheme" parent="AppTheme.NoActionBar">
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="ReadingFlowHeader" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="FormTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- <item name="android:paddingBottom">@dimen/material_edit_text_bottom_padding</item> -->
    </style>

    <style name="LargeTitle" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorOffWhite</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="DashboardCardText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">4dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Reading Summary -->
    <style name="SubHeading" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000088</item>
    </style>

    <style name="SubSubHeading" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000088</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
